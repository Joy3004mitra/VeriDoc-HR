
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layout.cshtml";
}


@section FormName{

    <i class="icon-home2 mr-2"></i>Site Settings

}


@section StyleCss{

    <style type="text/css">
        .filename {
            text-overflow: ellipsis;
            overflow: hidden;
            white-space: nowrap;
        }

        .preview {
            height: 230px;
        }
    </style>

}


<script>
    function OpenTab1(strMsg, error) {
        $("#tab1").fadeIn();
        $("#tab3").hide();
        $("#tab2").hide();
        if ($.trim(strMsg) != '') {
            if (error == 1)
                openErrorPopup(strMsg);
            else
                openSuccessPopup(strMsg);
        }
    }

</script>

<div id="tab1" class="card">
    @using (Html.BeginForm("btn_Head_Save_Click", "SiteSetting", FormMethod.Post, new { id = "submitform", enctype = "multipart/form-data" }))
    {

        <input type="hidden" name="hf_LOGO_NAME" value="@ViewBag.hf_LOGO_NAME" />

        <div class="card-body">
            <div class="col-md-12">
                <fieldset>
                    <legend class="font-weight-semibold">Basic Informations</legend>
                    <div class="row">

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    Contact Mail
                                </label>

                                <input type="text" class="form-control" id="txt_MAIL" value="@ViewBag.txt_MAIL" name="txt_MAIL" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    Address/Location
                                </label>
                                <input type="text" class="form-control" id="txt_ADDRESS" value="@ViewBag.txt_ADDRESS" name="txt_ADDRESS" />

                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    Contact No
                                </label>
                                <input type="text" class="form-control" id="txt_CONTACT_NO" value="@ViewBag.txt_CONTACT_NO" name="txt_CONTACT_NO" />


                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>
                                    Facebook Link
                                </label>
                                <input type="text" class="form-control" id="txt_FACEBOOK_LINK" value="@ViewBag.txt_FACEBOOK_LINK" name="txt_FACEBOOK_LINK" />

                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>
                                    Twitter Link
                                </label>
                                <input type="text" class="form-control" id="txt_TWITTER_LINK" value="@ViewBag.txt_TWITTER_LINK" name="txt_TWITTER_LINK" />

                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>
                                    Linkedin Link
                                </label>
                                <input type="text" class="form-control" id="txt_LINKEDIN_LINK" value="@ViewBag.txt_LINKEDIN_LINK" name="txt_LINKEDIN_LINK" />

                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>
                                    Instagram Link
                                </label>
                                <input type="text" class="form-control" id="txt_INSTAGRAM_LINK" value="@ViewBag.txt_INSTAGRAM_LINK" name="txt_INSTAGRAM_LINK" />

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>
                                    Telegram Link
                                </label>
                                <input type="text" class="form-control" id="txt_TELEGRAM_LINK" value="@ViewBag.txt_TELEGRAM_LINK" name="txt_TELEGRAM_LINK" />

                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>
                                    Printerest Link
                                </label>
                                <input type="text" class="form-control" id="txt_PRINTEREST_LINK" value="@ViewBag.txt_PRINTEREST_LINK" name="txt_PRINTEREST_LINK" />

                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>
                                    Medium Link
                                </label>
                                <input type="text" class="form-control" id="txt_MEDIUM_LINK" value="@ViewBag.txt_MEDIUM_LINK" name="txt_MEDIUM_LINK" />

                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <fieldset>
                                <legend>Page Settings</legend>
                                @using (Html.BeginForm())
                                {


                                    <div class="row">

                                        <input type="hidden" name="hf_DTLS_PAGE_SETTING_KEY" id="hf_DTLS_PAGE_SETTING_KEY" value="@ViewBag.hf_DTLS_PAGE_SETTING_KEY" />
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label>
                                                    Select Page
                                                </label>
                                                @Html.DropDownList("ddl_MAST_PAGE_KEY", ViewBag.PageName as SelectList, new { @class = "form-control populate" })

                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label>
                                                    Page Title
                                                </label>
                                                <input type="text" class="form-control" id="txt_PAGE_TITLE" name="txt_PAGE_TITLE" value="@ViewBag.txt_PAGE_TITLE" />

                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>
                                                    Meta Description
                                                </label>
                                                <input type="text" class="form-control" id="txt_META_DESCRIPTION" name="txt_META_DESCRIPTION" value="@ViewBag.txt_META_DESCRIPTION" />


                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>
                                                    Meta Keyword
                                                </label>
                                                <input type="text" class="form-control" id="txt_META_KEYWORD" name="txt_META_KEYWORD" value="@ViewBag.txt_META_KEYWORD" />


                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label>
                                                    &nbsp;
                                                </label>
                                                <input type="submit" formaction="btn_Page_Settings_Save_Click" formmethod="post" id="btn_Page_Settings_Save_Click" value="Save" class="save btn btn-primary form-control" />

                                            </div>
                                        </div>
                                    </div>
                                }
                                <div class="row">
                                    <div class="col-12">
                                        <div class="table-responsive">


                                            <table cellspacing="0" rules="all" class="table table-bordered table-sm table-hover" border="1" id="gvQuickFact" style="border-collapse:collapse;">
                                                <tbody>
                                                    <tr>
                                                        <th>Page Name</th>
                                                        <th>Page Title</th>
                                                        <th>Meta Description</th>
                                                        <th>Meta Keyword</th>
                                                        <th>Edit</th>
                                                    </tr>


                                                    @foreach (System.Data.DataRow dr in Model)
                                                    {
                                                        <tr>

                                                            <td>@dr["PAGE_NAME"].ToString()</td>
                                                            <td>@dr["PAGE_TITLE"].ToString()</td>
                                                            <td>@dr["META_DESCRIPTION"].ToString()</td>
                                                            <td>@dr["META_KEYWORD"].ToString()</td>

                                                            <td>
                                                                @using (Html.BeginForm("edit", "SiteSetting", FormMethod.Post, new { id = "submitE+" + dr["DTLS_PAGE_SETTING_KEY"].ToString() + "" }))
                                                                {

                                                                    <input type="hidden" name="editid" value="@dr["DTLS_PAGE_SETTING_KEY"].ToString()" />

                                                                    <a id="submitE+@dr["DTLS_PAGE_SETTING_KEY"].ToString()" href="#" onclick="postmethodusingjs(this.id)" class="list-icons-item"><i class="icon-menu9"></i></a>

                                                                }
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-6">
                                    <fieldset>
                                        <legend>Logo</legend>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label>
                                                        Upload Logo (Accepted Format .png, .svg, .jpg, .jpeg only. Max size 2MB)
                                                    </label>
                                                    <input type="file" id="fu_Logo" name="fu_Logo" class="form-input-styled" data-fouc accept=".gif, .png, .jpg, .svg, .jpeg" />

                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-8 ml-auto mr-auto">
                                                <img id="img_Logo" src="@ViewBag.img_Logo" class="form-control preview" />
                                            </div>
                                        </div>
                                    </fieldset>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>
                                    Footer Note
                                </label>
                                <input type="text" class="form-control" id="txt_FOOTER_NOTE" name="txt_FOOTER_NOTE" />
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12 text-center">
                    <input type="submit" name="btn_Head_Save" value="Submit" class="mb-xs mt-xs btn btn-success" onclick="postmethodusingheadsavejs();" />

                </div>
            </div>
        </div>
    }
</div>
@if (TempData["JavaScriptFunction"] != null)
{

    <script type="text/javascript">
               @Html.Raw(TempData["JavaScriptFunction"]);
    </script>
}
<script type="text/javascript">

    function postmethodusingjs(id) {
        document.forms[id].submit();
        return false;
    }

    function postmethodusingheadsavejs() {
        document.forms["submitform"].submit();
        return false;
    }
</script>

<script type="text/javascript">


    function OpenTab2(strMsg, error) {
        $("#tab1").hide();
        $("#tab3").hide();
        $("#tab2").fadeIn();
        if ($.trim(strMsg) != '') {
            if (error == 1)
                openErrorPopup(strMsg);
            else
                openSuccessPopup(strMsg);
        }
    }

    function OpenTab3(strMsg, error) {
        $("#tab1").hide();
        $("#tab3").fadeIn();
        $("#tab2").hide();

        if ($.trim(strMsg) != '') {
            if (error == 1)
                openErrorPopup(strMsg);
            else
                openSuccessPopup(strMsg);
        }
    }

    $(document).ready(function () {
        $('.form-input-styled').uniform({
            fileButtonClass: 'action btn bg-pink-400'
        });

        $("#fu_Logo").on("change", function (evt) {
            var tgt = evt.target || window.event.srcElement, files = tgt.files;
            if (files.length > 0) {
                if (files[0].size > 2097134) {
                    $(this).val("");
                    $(this).next(".filename").text("No file selected");
                    $('#img_Logo').attr("src", "~/assets/images/no_image.jpg");
                    $(this).focus();
                    openErrorPopup("Please maintain allowed document size (2MB maximum).");
                }
                else {
                    readURL(this, $('#img_Logo'));
                }
            }
            else {
                $('#img_Logo').attr("src", "~/assets/images/no_image.jpg");
            }
        });

        $('#loadingMask').fadeOut();
    });

    $(document).ready(function () {
        $('.form-input-styled').uniform({
            fileButtonClass: 'action btn bg-pink-400'
        });

        $("#fu_footer").on("change", function (evt) {
            var tgt = evt.target || window.event.srcElement, files = tgt.files;
            if (files.length > 0) {
                if (files[0].size > 2097134) {
                    $(this).val("");
                    $(this).next(".filename").text("No file selected");
                    $('#img1').attr("src", "~/assets/images/no_image.jpg");
                    $(this).focus();
                    openErrorPopup("Please maintain allowed document size (2MB maximum).");
                }
                else {
                    readURL(this, $('#img1.ClientID %>'));
                }
            }
            else {
                $('#img1').attr("src", "~/assets/images/no_image.jpg");
            }
        });

        $('#loadingMask').fadeOut();
    });
</script>